{
   "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "lib": [
         "ES2019"
      ],
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "./src",
      "paths": {
         "*": [
            "node_modules/*"
         ]
      },
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
   },
   "include": [
      "src/**/*"
   ]
}